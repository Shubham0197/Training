<h1>Forgot your Password</h1>

<%= form_with url: password_reset_path do |form| %>

<div class="mb-3">
  <%= form.label :email %>
  <%= form.text_field :email, class: "form-control", placeholder: "abc@gmail.com" %>
</div> 

<div class="mb-3">
  <%= form.submit "Forgot Password", class: "btn btn-primary" %>
</div>
<% end %>