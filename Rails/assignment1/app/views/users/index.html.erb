<h1>Index Page</h1>
<%= link_to "Create New User", new_user_path %>
<h2>List of users</h2>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3">Operations</th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%=  user.first_name + user.last_name %></td>
    <td><%=  user.email %></td>
    <td><%=  link_to "show", users_path(user.id)  %></td>
    <td><%= link_to "edit", edit_users_path(user.id)  %></td>
    <td><%=  link_to "delete", users_path(user.id)  %></td>
  </tr>
<% end %>

</table>