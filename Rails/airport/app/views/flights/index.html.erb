<center>
<h1>Flights Schedule</h1>
<%= image_tag("a.jpeg") %>
<table class="table table-striped">
  <tr>
    <th>From</th> 
    <th>Destination</th>
    <th>Distance</th> 
    <th>Departs</th> 
    <th>Arrives</th>  
    <th>Price</th>  
  </tr>
  <% @flights.each do |flight| %>
  <tr>
    <td><%= flight.from %></td>
    <td><%= flight.destination %></td>
    <td><%= flight.distance %></td> 
    <td><%= flight.departs.strftime('%a\'%d,%b,%y %I:%M %p') if flight.departs %></td> 
    <td><%= flight.arrives.strftime('%a\'%d,%b,%y %I:%M %p') if flight.arrives %></td>  
    <td><%= flight.price %></td>  
    <td><%= link_to("Update", edit_flight_path(flight))%></td>
    <td><%=  button_to "Delete", flight_path(flight.id), method: :delete  %></td>
  </tr>
  <% end %>
</table>
<%= link_to("Add new Flight Schedule", new_flight_path)%>
</center>

